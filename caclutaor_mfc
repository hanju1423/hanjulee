void CMFCApplication1pj3Dlg::OnBnClickedB0()
{
	if (Flag == true)
	{
		str1 += _T("0");
		Edit_result = str1;
	}
	else
	{
		str2 += _T("0");
		Edit_result = str2;
	}
	UpdateData(FALSE);
}
